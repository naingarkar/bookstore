<!DOCTYPE html>
<html>
  <head>
    <%- include('../partials/head'); %>
  </head>
  <body>
    <div class="container-fluid">
        <%- include('../partials/header'); %>

        <% if (messages.success) { %>
            <p class="alert alert-success mt-4"><%- messages.success %></p>
        <% } %>

        <div class="container">
            <div class="row mt-3">
              <% if(typeof(data) !== "undefined") {%>
              <div class="col-4">
                
                <div class="card no_border" style="width: 22rem;">
                    <img src="https://data.bitmyanmar.info/wunzin/assets/Online_Sarpay_cover/martial/tak_gabarthitnatphayar.jpg" class="card-img-top" alt="...">
                
                </div>
            
              </div>
              <div class="col-6">
                  <h5><%= data.b_name; %></h5>
                  <h5><%= data.a_name; %></h5>
                  <h5><%= data.price %></h5>
                  <h5><%= data.b_description %></h5>
              </div>
              <% }else{ %>
              <div class="col-3">
                  <span>No Book</span>
              </div>
              <% } %>
            </div>
        </div>
      </div>
  </body>
</html>