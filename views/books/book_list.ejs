<!DOCTYPE html>
<html>
  <head>
    <%- include('../partials/head'); %>
  </head>
  <body>
    <div class="container-fluid">
        <%- include('../partials/header'); %>

        <% if (messages.success) { %>
            <p class="alert alert-success mt-4"><%- messages.success %></p>
        <% } %>

        <div class="container">
            <div class="row mt-3">
              <% if(data.length){ for(var i = 0; i< data.length; i++) {%>
              <div class="col-3">
                <a href="/books/<%=data[i].bid%>/detail" class="text-decoration-none text-dark">
                  <div class="card no_border" style="width: 12rem;">
                    <img src="https://data.bitmyanmar.info/wunzin/assets/Online_Sarpay_cover/martial/tak_gabarthitnatphayar.jpg" class="card-img-top" alt="...">
                    <div class="card-body p-0 pt-3">
                      <p class="card-text"><%= data[i].b_name%></p>
                      <p class="card-text"><%= data[i].b_description %></p>
                      <p class="card-text"><%= data[i].a_name %></p>
                    </div>
                  </div>
                </a>
              </div>
              <% } }else{ %>
              <div class="col-3">
                  <span>No Book</span>
              </div>
              <% } %>
            </div>
        </div>
      </div>
  </body>
</html>